{
  "$id": "schema:base",
  "definitions": {
    "min_version": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z_]+$": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "content_type": {
      "type": "string",
      "enum": ["landing_page", "how_to", "reference", "concept", "plugin", "plugin_example", "api", "policy"]
    },
    "description": {
      "type": "string"
    },
    "auto_generated": { "type": "boolean" },
    "related_resources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri-reference"
          }
        }
      }
    },
    "products": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["api-ops", "gateway", "insomnia", "mesh"]
      }
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "deck",
          "inso-cli",
          "kic",
          "terraform",
          "admin-api",
          "konnect-api",
          "kong-cli"
        ]
      }
    },
    "works_on": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["on-prem", "konnect"]
      }
    }
  },
  "required": ["content_type"]
}
