{
    "$id": "schema:base",
    "type": "object",
    "properties": {
      "title": {
        "type": "string"
      },
      "content_type": {
        "type": "string",
        "enum": ["landing_page", "how_to", "reference", "concept"]
      },
      "description": {
        "type": "string"
      },
      "related_resources": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string"
            },
            "url": {
              "type": "string",
              "format": "uri-reference"
            }
          }
        }
      },
      "products": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["api-ops", "gateway", "insomnia", "mesh"]
        }
      },
      "tools": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "deck",
            "inso-cli",
            "kic",
            "terraform",
            "admin-api",
            "konnect-api",
            "ui"
          ]
        }
      },
      "works_on": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["on-prem", "konnect"]
        }
      }
    },
    "required": ["content_type", "title"]
  }